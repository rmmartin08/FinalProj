@model FinalProj.DATA.Course
@using FinalProj.DATA
@{
    ViewBag.Title = "Details";
    List<Lesson> lessons = new LMSEntities().Lessons.Where(l => l.CourseId == Model.CourseId).ToList();
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt>
            Lessons: 
        </dt>
        @foreach (var lesson in lessons)
        {
            <dd>
                @lesson.LessonTitle - @(lesson.isActive ? "Active" : "Inactive")
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
