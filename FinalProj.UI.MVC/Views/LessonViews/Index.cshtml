@model IEnumerable<FinalProj.DATA.LessonView>

@{
    ViewBag.Title = "Lesson Views";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateViewed)
        </th>
        <th>
